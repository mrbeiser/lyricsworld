@model WebApplication1.Models.Song

@{
    ViewData["Title"] = "Edit";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditSong">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SongID" class="control-label"></label>
                <input asp-for="SongID" class="form-control" readonly="readonly"/>
                <span asp-validation-for="SongID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SongTitle" class="control-label"></label>
                <input asp-for="SongTitle" class="form-control" />
                <span asp-validation-for="SongTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SongDuration" class="control-label"></label>
                <input asp-for="SongDuration" class="form-control" />
                <span asp-validation-for="SongDuration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SongLyrics" class="control-label"></label>
                <input asp-for="SongLyrics" class="form-control" />
                <span asp-validation-for="SongLyrics" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SongGenre" class="control-label"></label>
                <input asp-for="SongGenre" class="form-control" />
                <span asp-validation-for="SongGenre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Songs">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
